<div
  class="grid grid-cols-1 md:grid-cols-2 gap-5 md:gap-10 lg:gap-20 items-center"
>
  <img
    src="/uploads/<%= product.image %>"
    alt="<%= product.name %>"
    class="w-full"
  />
  <div class="md:mt-10">
    <span class="text-lg md:text-xl text-amber-500 uppercase font-bold"
      >Pex Company</span
    >
    <h2 class="text-2xl md:text-3xl font-semibold md:font-bold mt-2 md:mt-4">
      <%= product.name %>
    </h2>
    <p class="mt-3 text-gray-800 md:text-lg font-semibold">
      <%= product.description %>
    </p>
    <h3 class="text-xl md:text-2xl mt-3 md:mt-6 font-bold">
      $<%= product.price %>
    </h3>
  </div>
</div>
