<div class="flex flex-col gap-2 md:grid md:grid-cols-2">
  <label for="name" class="flex flex-col">
    <span class="text-sm">Nombre</span>
    <input
      type="text"
      id="name"
      name="name"
      class="border p-1 rounded"
      placeholder="Ingresa el nombre del producto"
      required
      value="<%= oldData?.name || '' %>"
    />
  </label>
  <label for="price" class="flex flex-col">
    <span class="text-sm">Precio</span>
    <input
      type="number"
      id="price"
      name="price"
      class="border p-1 rounded"
      placeholder="Ingresa el precio del producto"
      required
      value="<%= oldData?.price || '' %>"
    />
  </label>
</div>
<label for="description" class="flex flex-col">
  <span class="text-sm">Descripción</span>
  <textarea
    name="description"
    id="description"
    placeholder="Ingresa la descripción del producto"
    class="border p-1 rounded min-h-[100px]"
    required
  >
<%= oldData?.description || '' %></textarea
  >
</label>
<label for="image" class="flex flex-col mt-2">
  <span class="border p-1 rounded text-sm w-fit px-2">Imagen</span>
  <input type="file" id="image" name="image" accept="image/*" class="hidden" />

  <img src="<%= `${product ? "/uploads/"+product.image : ""}` %>"
  id="imagePreview" alt="<%=`${product ? product.nane : "image preview"}` %>"
  class="<%= `w-full max-w-[200px] rounded overflow-hidden mt-2 ${product ?
  "block" : "hidden"}` %>" />
</label>
<div class="mt-2">
  <button
    type="submit"
    class="bg-blue-500 text-white p-2 rounded hover:bg-blue-400 cursor-pointer transition-colors"
  >
    Enviar
  </button>
</div>
